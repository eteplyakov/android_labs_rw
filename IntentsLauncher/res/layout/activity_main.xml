<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/galleryButoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onGalleryButtonClick"
        android:text="@string/gallery" />

    <Button
        android:id="@+id/webBrowserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/galleryButoon"
        android:layout_below="@+id/galleryButoon"
        android:onClick="onBrowserButtonClick"
        android:text="@string/web_browser" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/webBrowserButton"
        android:layout_below="@+id/webBrowserButton"
        android:onClick="onMapButtonClick"
        android:text="@string/map" />

    <Button
        android:id="@+id/chooseImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_below="@+id/mapButton"
        android:onClick="onImageButtonClick"
        android:text="@string/choose_image" />

    <Button
        android:id="@+id/photoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chooseImageButton"
        android:layout_below="@+id/chooseImageButton"
        android:onClick="onPhotoButtonClick"
        android:text="@string/take_a_foto" />

    <Button
        android:id="@+id/videoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photoButton"
        android:layout_below="@+id/photoButton"
        android:onClick="onVideoButtonClick"
        android:text="@string/take_a_video" />

    <Button
        android:id="@+id/audioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/videoButton"
        android:layout_below="@+id/videoButton"
        android:onClick="onAudioButtonClick"
        android:text="@string/record_audio" />

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/audioButton"
        android:layout_below="@+id/audioButton"
        android:src="@android:drawable/editbox_background_normal"
        android:contentDescription="@string/none" />

</RelativeLayout>